<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/drawer_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/text_color_dark"
        app:itemIconTint="@color/text_color_dark"
        app:menu="@menu/menu_main"
        android:layout_gravity= "start"
        android:nestedScrollingEnabled="true"
        >

    </android.support.design.widget.NavigationView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/activity_background_darker"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1919"
            app:title="Home"
            app:titleTextColor="@color/white"
            android:elevation="10dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/initial_username"
                    android:textColor="@color/name_color"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/welcome"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />
                <View
                    android:id="@+id/line_1"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="@color/button_color"
                    android:layout_below="@id/username"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btn_request"
                    android:layout_width="@dimen/view_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:text="@string/request_a_mechanic"
                    android:background="@drawable/button_dark"
                    android:textColor="@color/white"
                    android:layout_below="@id/line_1"
                    android:layout_marginTop="30dp"
                    android:elevation="15dp"
                    android:translationZ="5dp"/>
                <TextView
                    android:id="@+id/dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/btn_request"
                    android:layout_alignLeft="@id/btn_request"
                    android:layout_below="@id/btn_request"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_dark"
                    android:text="@string/dashboard"
                    android:textSize="16sp"
                    />

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/view_width"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dashboard"
                    android:background="@drawable/button_dark"
                    android:layout_marginTop="25dp"
                    android:elevation="5dp"
                    android:translationZ="10dp"

                    >
                    <TextView
                        android:id="@+id/lastfix"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/your_last_fix"
                        android:textColor="@color/text_color_dark_secondary"
                        android:textSize="16sp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:id="@+id/line_2"
                        android:layout_width="35dp"
                        android:layout_height="2dp"
                        android:background="@color/text_color_dark_secondary"
                        android:layout_below="@id/lastfix"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:id="@+id/loc_mech_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line_2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <RelativeLayout
                            android:layout_width="@dimen/half_view_width"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/location"
                                android:text="@string/location"
                                style="@style/text_style_bold" />
                            <TextView
                                android:id="@+id/latitude"
                                android:text="@string/placeholder_lat"
                                android:layout_below="@id/location"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                style="@style/text_style_regular" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lat_label"
                                android:textColor="@color/name_color"
                                android:layout_below="@id/latitude"
                                android:layout_alignLeft="@id/latitude"
                                android:layout_alignStart="@id/latitude"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:textSize="@dimen/small_text"/>

                            <View
                                android:id="@+id/line_3"
                                android:layout_width="1dp"
                                android:layout_height="40dp"
                                android:background="@color/text_color_dark_secondary"
                                android:layout_below="@id/location"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:id="@+id/longitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_long"
                                android:layout_below="@id/location"
                                android:layout_toEndOf="@id/line_3"
                                android:layout_toRightOf="@id/line_3"
                                android:textSize="@dimen/small_text"
                                android:textColor="@color/text_color_dark"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/long_label"
                                android:layout_below="@id/latitude"
                                android:layout_alignLeft="@id/longitude"
                                android:layout_alignStart="@id/longitude"
                                android:layout_marginLeft="3dp"
                                android:layout_marginStart="3dp"
                                style="@style/small_green_text" />
                            <TextView
                                android:id="@+id/txt_view_map"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/map_view"
                                android:textColor="@color/name_color"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="3dp"
                                android:layout_marginStart="3dp"
                                android:layout_below="@id/line_3"
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/small_text"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="@dimen/half_view_width"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/mechanic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/your_mechanic"
                                style="@style/text_style_bold"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/mech_profile_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/profile_placeholder"
                                android:layout_below="@id/mechanic"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginLeft="15dp"/>
                            <TextView
                                android:id="@+id/mechanic_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/mech_profile_image"
                                android:layout_toEndOf="@id/mech_profile_image"
                                android:layout_marginLeft="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_below="@id/mechanic"
                                android:text="@string/mechanic_name_placeholder"
                                android:textSize="@dimen/small_text"
                                android:textColor="@color/text_color_dark"
                                android:layout_marginTop="5dp"

                                />
                            <TextView
                                android:id="@+id/view_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/mech_profile_image"
                                android:layout_toEndOf="@id/mech_profile_image"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_below="@id/mechanic_name"
                                android:text="@string/view_profile"
                                android:textSize="@dimen/small_text"
                                android:textColor="@color/name_color"
                                android:layout_marginTop="5dp"

                                />
                            <TextView
                                android:id="@+id/rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:layout_below="@id/view_profile"
                                android:text="@string/rating_placeholder"
                                android:textSize="@dimen/small_text"
                                android:textColor="@color/text_color_dark"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp"

                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/line_4"
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:background="@color/text_color_dark_secondary"
                        android:layout_below="@id/loc_mech_layout"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_style_bold"
                        android:text="@string/details"
                        android:layout_below="@id/line_4"
                        android:layout_marginTop="5dp"/>

                    <RelativeLayout
                        android:id="@+id/details_layout"
                        android:layout_below="@id/details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        >
                        <LinearLayout

                            android:id="@+id/total_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_style_bold"
                                android:text="@string/total_cost"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/small_green_text"
                                android:text="@string/total_placeholder"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:id="@+id/rate_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_style_bold"
                                android:text="@string/rate"

                                android:layout_marginLeft="30dp"
                                android:textSize="12sp"
                                android:layout_marginStart="30dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/small_green_text"
                                android:textSize="12sp"
                                android:text="@string/rate_placeholder"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginStart="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_toRightOf="@id/total_label"
                            android:id="@+id/duration_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/total_label">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_style_bold"
                                android:text="@string/duration"
                                android:textSize="12sp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginStart="25dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/small_green_text"
                                android:textSize="12sp"
                                android:text="@string/_2h_45m"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginStart="30dp" />
                        </LinearLayout>


                    </RelativeLayout>
                    <View
                        android:id="@+id/line_5"
                        android:layout_width="@dimen/view_width"
                        android:layout_height="1dp"
                        android:background="@color/name_color"
                        android:layout_below="@id/details_layout"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_style_bold"
                        android:text="@string/request_overview"
                        android:layout_below="@id/line_5"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:id="@+id/success_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/small_green_text"
                        android:text="@string/successful"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/line_5"
                        android:layout_marginTop="80dp"
                        android:textSize="12sp"
                        />
                    <View
                        android:id="@+id/line_6"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/text_color_dark_secondary"
                        android:layout_toStartOf="@id/success_label"
                        android:layout_marginTop="55dp"
                        android:layout_below="@id/line_5"
                        android:layout_marginRight="15dp"

                        android:layout_toLeftOf="@id/success_label"
                        android:layout_marginEnd="15dp" />
                    <View
                        android:id="@+id/line_7"
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/text_color_dark_secondary"
                        android:layout_toEndOf="@id/success_label"
                        android:layout_marginTop="55dp"
                        android:layout_below="@id/line_5"
                        android:layout_marginLeft="10dp"

                        android:layout_toRightOf="@id/success_label"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:id="@+id/requests_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/small_green_text"
                        android:text="@string/requests"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/line_5"
                        android:layout_marginTop="80dp"
                        android:textSize="12sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/small_green_text"
                        android:text="@string/unsuccessful"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/line_5"
                        android:layout_marginTop="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_below="@id/line_7"/>

                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>